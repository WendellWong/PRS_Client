<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/functionIcon"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/functionName"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/functionExc"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/avatar" />

    <ImageView
        android:id="@+id/functionIcon2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/functionName2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/functionDoexchange"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/doexchange" />

        <Button
            android:id="@+id/functionCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/cancel"/>
        
    </LinearLayout>




</LinearLayout>
